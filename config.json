{
  "src": "src",
  "dest": "dist",
  "debug": false,
  "cache_boost": false,
  "minimize": true,
  "linters": false,
  "server": {
    "open": true,
    "index": "__routes.html"
  },
  "styles": {
    "bundle": "style",
    "src": "styles",
    "dest": "css",
    "extension": "scss"
  },
  "scripts": {
    "bundle": "app",
    "src": "js",
    "dest": "js",
    "extension": "js"
  },
  "templates": {
    "src": "views",
    "dest": "./",
    "extension": "html"
  },
  "static": {
    "fonts": {
      "src": "fonts"
    },
    "images": {
      "src": "images"
    },
    "favicon": {
      "src": "favicon",
      "dest": "./"
    }
  }
}
